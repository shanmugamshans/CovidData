<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        tools:context=".MainActivity">
    <ImageView
            android:background="@android:color/black"
            android:src="@drawable/corona"
            android:layout_width="wrap_content"
            android:layout_height="267dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            android:id="@+id/imageView" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView3"/>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cardView3"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="India"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="130dp" android:layout_marginStart="130dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="130dp" android:layout_marginRight="130dp"
                    android:id="@+id/textView2"
                    android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/indiacoronacount"
                    android:layout_marginTop="4dp" app:layout_constraintVertical_bias="0.166"/>
            <TextView
                    android:background="@drawable/labelview"
                    android:id="@+id/indiacoronacount"
                    android:textColor="@android:color/black"
                    android:text=""
                    android:textStyle="bold"
                    app:autoSizeMinTextSize="5dp"
                    app:autoSizeMaxTextSize="25dp"
                    app:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="130dp" android:layout_marginRight="130dp"
                    android:layout_marginBottom="5dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="130dp" android:layout_marginStart="130dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:textSize="30dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="TOP DISTRICT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="320dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintVertical_bias="0.902" android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:id="@+id/textView"/>
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.744" android:id="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent">
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >
                    <LinearLayout
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="93dp" android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp" android:layout_marginTop="28dp"
                            android:layout_alignParentTop="true">
                        <TextView
                                android:background="@drawable/labelview"
                                android:id="@+id/district"
                                android:textColor="@android:color/black"
                                android:text=""
                                android:textStyle="bold"
                                app:autoSizeMinTextSize="5dp"
                                app:autoSizeMaxTextSize="25dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                        />
                        <TextView
                                android:background="@drawable/labelview"
                                android:id="@+id/district1"
                                android:textColor="@android:color/black"
                                android:text=""
                                android:textStyle="bold"
                                app:autoSizeMinTextSize="5dp"
                                app:autoSizeMaxTextSize="25dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                        />
                        <TextView
                                android:background="@drawable/labelview"
                                android:id="@+id/district2"
                                android:textColor="@android:color/black"
                                android:text=""
                                android:textStyle="bold"
                                app:autoSizeMinTextSize="5dp"
                                app:autoSizeMaxTextSize="25dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                        />
                        <TextView
                                android:background="@drawable/labelview"
                                android:id="@+id/district3"
                                android:textColor="@android:color/black"
                                android:text=""
                                android:textStyle="bold"
                                app:autoSizeMinTextSize="5dp"
                                app:autoSizeMaxTextSize="25dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:paddingLeft="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="33dp" android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp" android:layout_marginTop="88dp"
                            android:layout_alignParentTop="true">
                        <TextView
                                android:textStyle="bold"
                                android:text="Chennai"
                                app:autoSizeMinTextSize="1dp"
                                app:autoSizeMaxTextSize="15dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                        />
                        <TextView
                                android:textStyle="bold"
                                android:text="Chengalpattu"
                                app:autoSizeMinTextSize="1dp"
                                app:autoSizeMaxTextSize="15dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                        />
                        <TextView
                                android:textStyle="bold"
                                android:text="Thiruvallur"
                                app:autoSizeMinTextSize="1dp"
                                app:autoSizeMaxTextSize="15dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                        />
                        <TextView
                                android:textStyle="bold"
                                android:text="Madurai"
                                app:autoSizeMinTextSize="1dp"
                                app:autoSizeMaxTextSize="15dp"
                                app:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                        />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.cardview.widget.CardView>
    <Button
            android:background="@drawable/labelview"
            style="@style/Widget.AppCompat.Button.Small"
            android:id="@+id/search"
            android:textSize="25dp"
            android:text="Search More"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.423"/>

</androidx.constraintlayout.widget.ConstraintLayout>